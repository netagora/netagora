{% extends "ECENetagoraBundle::layout.html.twig" %}

{% form_theme form _self %}

{% block field_row %}
{% spaceless %}
    <li>
        {{ form_label(form, label|default(null)) }}
        {{ form_widget(form) }}
        {{ form_errors(form) }}
    </li>
{% endspaceless %}
{% endblock field_row %}

{% block content %}

    <form novalidate="novalidate" id="subscribe" action="{{ path('subscribe') }}" method="post" {{ form_enctype(form) }}>
        <fieldset>
            <legend class="subtitle">Subscribe</legend>
                <ol>
                {% for field in form %}
                    {{ form_row(field) }}
                {% endfor %}
                </ol>
             </fieldset>
                    
           <div class="division"></div>
 
            <fieldset>
                <button type=submit>Register</button>
          </fieldset>
    </form>

    <span id="twitter_connect">
        {#<a href="{{ path('twitter_login') }}">Connect with Twitter</a>#}
    </span>

    {{ twitter_anywhere_setConfig('callbackURL', url('twitter_login_check')) }}
    {{ twitter_anywhere_queue('T("#twitter_connect").connectButton()') }}

{% endblock %}